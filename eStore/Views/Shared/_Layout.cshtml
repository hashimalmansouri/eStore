<!DOCTYPE html>
<html dir="rtl" lang="ar">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - تسوق الكتروني</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link href="~/Content/PagedList.css" rel="stylesheet" />

</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-light bg-light rounded" aria-label="Eleventh navbar example">
        <div class="container-fluid">
            @Html.ActionLink("تجارة إلكترونية", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarsExample09" aria-controls="navbarsExample09" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarsExample09">
                <ul class="navbar-nav mb-2 mb-lg-0">
                    @if (User.Identity.IsAuthenticated && User.IsInRole("مستهلك"))
                    {
                        <li class="nav-item">
                            @Html.ActionLink("مشترياتي", "Index", "Purchase", new { area = "" }, new { @class = "nav-link" })
                        </li>
                    }
                    @if (User.Identity.IsAuthenticated && User.IsInRole("Admin"))
                    {
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="dropdown09" data-bs-toggle="dropdown" aria-expanded="false">لوحة التحكم</a>
                            <ul class="dropdown-menu" aria-labelledby="dropdown09">
                                <li>@Html.ActionLink("المستخدمون", "Index", "UsersAdmin", new { area = "" }, new { @class = "dropdown-item" })</li>
                                <li>@Html.ActionLink("الماركات", "Index", "BrandManager", new { area = "" }, new { @class = "dropdown-item" })</li>
                                <li>@Html.ActionLink("الأصناف", "Index", "GenreManager", new { area = "" }, new { @class = "dropdown-item" })</li>
                                <li>@Html.ActionLink("المنتجات", "Index", "ProductManager", new { area = "" }, new { @class = "dropdown-item" })</li>
                            </ul>
                        </li>
                    }
                    @{Html.RenderAction("BrandsMenu", "Store");}
                    @{Html.RenderAction("GenresMenu", "Store");}
                </ul>

                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </nav>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer class="footer mt-auto py-3 bg-light">
            <div class="container text-center">
                <span class="text-muted">جميع الحقوق محفوظة &copy; @DateTime.Now.Year</span>
            </div>
        </footer>
    </div>
    <script src="~/Scripts/jquery-3.4.1.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    @*<script src="~/Scripts/bootstrap.bundle.min.js"></script>*@
    @RenderSection("scripts", required: false)
</body>
</html>
